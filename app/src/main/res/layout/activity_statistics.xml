<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_statistics"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/zhihu_primary"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_back_statistics"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/backwhite" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_income_tb_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收入"
                    android:textColor="@color/white"
                    android:textSize="17dp" />
                <View
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/tv_expenditure_tb_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支出"
                    android:textColor="@color/white"
                    android:textSize="17dp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:id="@+id/fl_statistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
